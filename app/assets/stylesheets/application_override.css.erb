@import url(http://fonts.googleapis.com/css?family=Open+Sans:400,300);

html {
  background: #fff;
  background: -moz-linear-gradient(45deg, #EFF, #fff);
  background: -ms-linear-gradient(45deg, #EFF, #fff);
  background: -webkit-linear-gradient(45deg, #EFF, #fff);
  background: linear-gradient(45deg, #EFF, #fff);
  min-height: 100%;
  font-family: "Open Sans", Helvetica, sans-serif;
  font-weight: 300;
}

.header {
  position: fixed;
  top: -10px;
  left: 0;
  width: 100%;
  height: 10px;
  -webkit-box-shadow: 0px 0px 10px rgba(0,0,0,.8);
  -moz-box-shadow: 0px 0px 10px rgba(0,0,0,.8);
  box-shadow: 0px 0px 10px rgba(0,0,0,.8);
  z-index: 100;
}

.page-curl {
    background: #FFFFFF;
    -moz-box-shadow: 0 0 6px rgba(0, 0, 0, 0.3);
    -webkit-box-shadow: 0 0 6px rgba(0, 0, 0, 0.3);
	box-shadow: 0 0 6px rgba(0, 0, 0, 0.3);
	margin: 30px auto;
	padding: 15px;
	position: relative;
	width: 50%;
}

.page-curl:before, .page-curl:after {
    background: none;
	-moz-box-shadow: 0 10px 12px rgba(0, 0, 0, 0.3);
	-webkit-box-shadow: 0 10px 12px rgba(0, 0, 0, 0.3);
	box-shadow: 0 10px 12px rgba(0, 0, 0, 0.3);
	height: 10px;
	left: 12px;
	position: absolute;
	width: 40%;
}